{
  "extends": "eslint-config-airbnb",
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "indent": ["error", "tab"],
    "react/jsx-indent": ["error", "tab"],
    "react/prefer-stateless-function": 1
  },
  "plugins": [
      "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
